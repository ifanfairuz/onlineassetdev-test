{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/frontend/**/*", "src/**/*.vue", "src/shared/**/*"],
  "exclude": ["src/**/__tests__/*", "src/api/**/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/frontend/*"],
      "@shared/*": ["./src/shared/*"]
    }
  }
}
